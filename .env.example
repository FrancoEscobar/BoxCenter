# ============================================
# APLICACIÓN
# ============================================
APP_NAME=BoxCenter
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_TIMEZONE=America/Argentina/Buenos_Aires
APP_URL=http://localhost:8000
APP_LOCALE=es
APP_FALLBACK_LOCALE=es
APP_FAKER_LOCALE=es_AR

# ============================================
# LOGS
# ============================================
LOG_CHANNEL=stack
LOG_LEVEL=debug
LOG_DEPRECATIONS_CHANNEL=null

# ============================================
# BASE DE DATOS
# ============================================
# Para desarrollo local con XAMPP/WAMP:
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=boxcenter
DB_USERNAME=root
DB_PASSWORD=

# Para Docker:
# DB_HOST=db
# DB_USERNAME=boxcenter
# DB_PASSWORD=root

# Para Railway (producción - provisto automáticamente):
# DATABASE_URL=postgresql://user:pass@host:port/dbname

# ============================================
# SESIÓN / CACHÉ / COLA
# ============================================
SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

CACHE_STORE=database
CACHE_PREFIX=

QUEUE_CONNECTION=sync

# ============================================
# REDIS 
# ============================================
REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# ============================================
# CORREO ELECTRÓNICO
# ============================================
MAIL_MAILER=log
MAIL_HOST=127.0.0.1
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="hello@example.com"
MAIL_FROM_NAME="${APP_NAME}"

# Para producción con servicio real:
# MAIL_MAILER=smtp
# MAIL_HOST=smtp.gmail.com
# MAIL_PORT=587
# MAIL_USERNAME=tu_email@gmail.com
# MAIL_PASSWORD=tu_password_de_aplicacion
# MAIL_ENCRYPTION=tls

# ============================================
# SERVICIOS DE TERCEROS
# ============================================

# MercadoPago (Pagos)
MERCADOPAGO_ACCESS_TOKEN=
MERCADOPAGO_PUBLIC_KEY=
# Obtener en: https://www.mercadopago.com.ar/developers/panel/credentials

# ============================================
# BROADCASTING
# ============================================
BROADCAST_CONNECTION=log
BROADCAST_DRIVER=log

# ============================================
# VITE (Assets Frontend)
# ============================================
VITE_APP_NAME="${APP_NAME}"
VITE_PUSHER_APP_KEY="${PUSHER_APP_KEY}"
VITE_PUSHER_HOST="${PUSHER_HOST}"
VITE_PUSHER_PORT="${PUSHER_PORT}"
VITE_PUSHER_SCHEME="${PUSHER_SCHEME}"
VITE_PUSHER_APP_CLUSTER="${PUSHER_APP_CLUSTER}"

# ============================================
# CONFIGURACIÓN DE TESTING (NO MODIFICAR)
# ============================================
# Para tests se usa .env.testing con SQLite en memoria
